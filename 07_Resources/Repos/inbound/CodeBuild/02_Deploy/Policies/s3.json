{
	"CodeBuildDeployPolicyS3": {
		"Type": "AWS::IAM::Policy",
		"Properties": {
			"Roles": [
				{ "Ref": "CodeBuildDeployRole" }
			],
			"PolicyName": "s3_access",
			"PolicyDocument": {
				"Version": "2012-10-17",
				"Statement": [
					{
						"Effect": "Allow",
						"Action": "s3:*",
						"Resource": { "Fn::Sub": "arn:aws:s3:::${S3Code}/*"}
					}
				]
			}
		}
	}
}
