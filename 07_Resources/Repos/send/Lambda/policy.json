{
	"LambdaEmailSendPolicy": {
		"Type": "AWS::IAM::Policy",
		"Properties": {
			"PolicyName": "SESAccess",
			"Roles": [
				{ "Ref": "LambdaEmailSendRole" }
			],
			"PolicyDocument": {
				"Version": "2012-10-17",
				"Statement": [
					{
						"Effect": "Allow",
						"Action": "ses:SendRawEmail",
						"Resource": "*"
					},
					{
						"Effect": "Allow",
						"Action": "s3:*",
						"Resource": { "Fn::Sub": "arn:aws:s3:::${S3Email}" }
					}
				]
			}
		}
	}
}
