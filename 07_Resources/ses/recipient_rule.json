{
	"SESReceiptRule": {
		"Type": "AWS::SES::ReceiptRule",
		"Properties": {
			"RuleSetName": { "Ref": "SESReceiptRuleSet"},
			"Rule": {
				"Name": "Inbound",
				"Actions": [
					{
						"LambdaAction": {
							"FunctionArn": { "Fn::GetAtt": ["LambdaEmailInbound", "Arn"]}
						}
					},
					{
						"S3Action": {
							"BucketName": { "Ref": "S3Email" },
							"ObjectKeyPrefix": "_inbound"
						}
					}
				],
				"Enabled": true
			}
		}
	}
}