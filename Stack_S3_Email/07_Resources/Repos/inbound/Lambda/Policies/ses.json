{
	"LambdaEmailInboundPolicySES": {
		"Type": "AWS::IAM::Policy",
		"Properties": {
			"PolicyName": "SESAccess",
			"Roles": [ { "Ref": "LambdaEmailInboundRole" } ],
			"PolicyDocument": {
				"Version": "2012-10-17",
				"Statement": [
					{
						"Effect": "Allow",
						"Action": "ses:SendRawEmail",
						"Resource": "*"
					}
				]
			}
		}
	}
}
